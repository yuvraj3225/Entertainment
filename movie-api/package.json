{
  "name": "movie-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "mongoose": "^8.2.0",
    "nodemon": "^3.1.0"
  }
  {
  "version": 2, // Version of the Vercel configuration file

  "builds": [
    {
      "src": "movie/ai/package.json", // Location of the package.json file for the frontend
      "use": "@vercel/static-build", // Use the static build step for the frontend
      "config": { "distDir": "movie/ai/build" } // Specify the build output directory for the frontend
    },
    {
      "src": "movie/api/**/*", // Location of the backend files
      "use": "@vercel/node" // Use Node.js runtime for the backend
    }
  ],

  "routes": [
    {
      "src": "/api/(.*)", // Define routes for API requests
      "dest": "movie/api/$1.js" // Map API routes to the corresponding backend files
    },
    {
      "src": "/(.*)", // Define routes for frontend requests
      "dest": "movie/ai/$1" // Serve frontend files for other routes
    }
  ]
}

}
